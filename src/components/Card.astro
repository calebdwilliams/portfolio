---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card">
	<a href={href}>
		<h3>
			{title}
			<span>&rarr;</span>
		</h3>
		<p>
			{body}
		</p>
	</a>
</li>
<style>
	.link-card {
		border: 12px solid;
		border-image-source: var(--gradient-18);
		border-image-slice: 1;
		border-width: 6px;
		box-sizing: border-box;
		max-inline-size: unset;
		orphans: 3;
		transition: all 0.2s var(--ease-in-2);
	}
	.link-card h3 {
		font-size: var(--font-size-fluid-1);
	}
	.link-card p {
		font-size: var(--font-size-1);
	}
	.link-card a {
		display: block;
		opacity: 80%;
		padding: var(--size-2);
	}
	.link-card a:visited {
		color: var(--text-2);
	}
	.link-card:has(:focus),
	.link-card:has(:hover) {
		border-image-source: var(--gradient-24);

		& h3 {
			background: var(--gradient-24);
			-webkit-background-clip: text;
			-webkit-text-fill-color: transparent;
		}
		& a {
			opacity: 100%;
		}
	}
</style>
